<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/amp_header">

        <SwitchPreferenceCompat
            app:key="amp"
            app:title="@string/amp_title"
            app:summaryOff="@string/amp_summary_off"
            app:summaryOn="@string/amp_summary_on" />

        <EditTextPreference
            app:defaultValue="https://your.ampache-server.com"
            app:dependency="amp"
            app:key="amp_server"
            app:title="@string/amp_server"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue=""
            app:dependency="amp"
            app:key="amp_user"
            app:title="@string/amp_user"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue=""
            app:dependency="amp"
            app:key="amp_pwd"
            app:title="@string/amp_pwd"
            app:shouldDisableView="true"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue=""
            app:dependency="amp"
            app:key="amp_catalog"
            app:title="@string/amp_catalog"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="amp_streaming"
            app:dependency="amp"
            app:title="Mode"
            app:summaryOff="@string/amp_streaming_off"
            app:summaryOn="@string/amp_streaming_on" />

    </PreferenceCategory>

</PreferenceScreen>